<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for Spring 6 test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set DEBUG level for Dify logging components to exercise log branches -->
    <logger name="io.github.guoshiqiufeng.dify.client.integration.spring.logging" level="DEBUG"/>
    <logger name="io.github.guoshiqiufeng.dify.client.integration.spring.http" level="DEBUG"/>

    <!-- Root logger at INFO to avoid excessive noise -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
